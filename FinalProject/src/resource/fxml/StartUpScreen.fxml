<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="360.0" stylesheets="Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <center>
      <VBox fx:id="vbox" alignment="CENTER" prefHeight="676.0" prefWidth="360.0"  styleClass="animated-gradient" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="Logo">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </ImageView>
            <Label alignment="CENTER" prefHeight="33.0" prefWidth="334.0" styleClass="labelCompanyName" text="J&amp;B Covid Solutions Inc.">
               <VBox.margin>
                  <Insets bottom="150.0" />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="182.0" styleClass="label" text="Returning Users">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </Label>
            <Button fx:id="signInButton" alignment="CENTER" mnemonicParsing="false" onAction="#signInSceneSwitch" prefHeight="34.0" prefWidth="181.0" styleClass="plainButton" text="Sign In">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Button>
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="182.0" styleClass="label" text="Create an Account">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </Label>
            <Button fx:id="signUpButton" alignment="CENTER" mnemonicParsing="false" onAction="#signUpSceneSwitch" prefHeight="34.0" prefWidth="181.0" styleClass="plainButton" text="Sign Up">
               <VBox.margin>
                  <Insets bottom="100.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Pane prefHeight="48.0" prefWidth="360.0" styleClass="Sidebar" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
