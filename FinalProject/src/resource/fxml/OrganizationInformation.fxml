<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="360.0" stylesheets="Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="OrganizationInfoController">
    <center>
        <VBox alignment="CENTER" prefHeight="676.0" prefWidth="360.0" styleClass="BackGroundGradient" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="orgIcon" fitHeight="106.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </ImageView>
                <Label fx:id="orgName" alignment="CENTER" prefHeight="33.0" prefWidth="359.0" styleClass="medLabel" text="Organization Name" />
            <TextArea fx:id="requirementTextArea" prefHeight="446.0" prefWidth="313.0" styleClass="text-area">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TextArea>
            </children>
        </VBox>
    </center>
    <top>
        <Pane prefHeight="48.0" prefWidth="360.0" styleClass="Sidebar" BorderPane.alignment="CENTER">
        <children>
            <ImageView fitHeight="44.0" fitWidth="64.0" layoutY="2.0" onMouseClicked="#backArrow" pickOnBounds="true" preserveRatio="true" styleClass="backArrow" />
        </children></Pane>
    </top>
</BorderPane>
