<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="360.0" stylesheets="Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignUpScreenUserController">
   <center>
      <VBox alignment="CENTER" prefHeight="676.0" prefWidth="360.0" styleClass="LogInGradient" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="userImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button mnemonicParsing="false" onAction="#addImage" text="Add Image">
               <VBox.margin>
                  <Insets bottom="75.0" top="15.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="nameInfoWrong" alignment="CENTER" prefHeight="16.0" prefWidth="382.0" styleClass="errorLabel" />
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="182.0" styleClass="label" text="First Name">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="firstNameField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="217.0" promptText="First Name" />
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="182.0" styleClass="label" text="Last Name">
               <padding>
                  <Insets bottom="5.0" top="20.0" />
               </padding>
            </Label>
            <TextField fx:id="lastNameField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="217.0" promptText="Last Name" />
            <Label alignment="CENTER" prefHeight="16.0" prefWidth="182.0" styleClass="label" text="Location">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="locationField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="217.0" promptText="Location" />
            <Button fx:id="signUp" alignment="CENTER" mnemonicParsing="false" onAction="#signUp" prefHeight="34.0" prefWidth="181.0" styleClass="greenButton" text="Sign Up">
               <VBox.margin>
                  <Insets bottom="15.0" top="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Pane prefHeight="48.0" prefWidth="360.0" styleClass="Sidebar" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="41.0" fitWidth="65.0" layoutX="3.0" layoutY="5.0" onMouseClicked="#backArrow" pickOnBounds="true" preserveRatio="true" styleClass="backArrow" />
         </children>
      </Pane>
   </top>
</BorderPane>
